{
  "sde.languageServerMode": "sourcekite",
  "[swift]": {
    "editor.defaultFormatter": "vknabel.vscode-swiftformat"
  },
  "swift.targets": [
    {
      "name": "Puffery",
      "path": "Puffery",
      "sources": ["**/*.swift"],
      "compilerArguments": ["-target", "iOS"]
    },
    {
      "name": "PufferyWidget",
      "path": "PufferyWidget",
      "sources": ["**/*.swift"],
      "compilerArguments": ["-target", "iOS"]
    }
  ],
  "sde.buildOnSave": false
}
